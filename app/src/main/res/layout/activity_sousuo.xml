<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SousuoActivity"
    android:background="@drawable/backd"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:gravity="center_vertical"
        android:background="#5A5A5A"
        >
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:alpha="0.5"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_36"
            android:background="#fff"
            android:id="@+id/onefragment_sousuo"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:src="@drawable/fancy"
                android:id="@+id/fancy"
                />
            <EditText
                android:id="@+id/sousuo_edit"
                android:paddingLeft="@dimen/dp_5"
                android:textColorHint="#000"
                android:background="@null"
                android:hint="请输入要搜索的内容"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_14"
                android:layout_toRightOf="@+id/fancy"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/dp_16"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/sousuo_text"
            />
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/dp_14"
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索记录"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sousuo_lishi_recy"
        ></android.support.v7.widget.RecyclerView>
    <TextView
        android:textColor="#fff"
        android:textSize="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门推荐"
        android:layout_margin="@dimen/dp_10"
        />

</LinearLayout>