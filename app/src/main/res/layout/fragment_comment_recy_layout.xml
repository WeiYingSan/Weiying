<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/comment_recy_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/comment_recy_tou"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_12"
                    android:id="@+id/comment_recy_name"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_10"
                    android:id="@+id/comment_recy_time"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/like"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/like"
                />
            <TextView
                android:textColor="#fff"
                android:layout_toRightOf="@+id/like"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_count"
                />
            <TextView
                android:layout_toRightOf="@+id/like_count"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                android:background="#fff"
                android:id="@+id/comment_recy_kong1"
                />
            <TextView
                android:layout_toRightOf="@+id/comment_recy_kong1"
                android:id="@+id/comment_recy_fenxiang"
                android:textSize="@dimen/dp_8"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                />
            <TextView
                android:layout_toRightOf="@+id/comment_recy_fenxiang"
                android:id="@+id/comment_recy_kong2"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                android:background="#fff"
                />
            <TextView
                android:layout_toRightOf="@id/comment_recy_kong2"
                android:textSize="@dimen/dp_8"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/comment_recy_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/comment_recy_details"
            android:layout_marginLeft="@dimen/dp_60"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            />
    </RelativeLayout>
</RelativeLayout>